@model cargomanagementsystem.Entity.Model.cargomanagementRegister

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="Email">Email Id</label>
        <input type="text" class="form-control" asp-for="Emailid">
    </div>
    <div class="form-group">
        <label for="Mobile">Mobile No</label>
        <input type="text" class="form-control" asp-for="Mobile">
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="text" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <label for="Retypepswd">Confirm Password</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword">
    </div>
    <input type="submit" class="btn btn-primary" value="Register">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
<div class="alert alert-success">
    @ViewBag.message
</div> }
            else if (ViewBag.status == "Error")
            {
<div class="alert alert-danger">
    @ViewBag.message
</div>}
    <hr />
    <a asp-controller="Register" asp-action="Login">Login</a>
</form>
