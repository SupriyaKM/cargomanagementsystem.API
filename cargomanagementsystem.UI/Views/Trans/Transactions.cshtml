@model cargomanagementsystem.Entity.Model.Transaction
<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2><hr />
    <div class="form-group">
        <label>Customer Id</label>
        <input type="text" asp-for="customerid" class="form-control" placeholder="enter customer id" required />
    </div>
    <div class="form-group">
        <label>Type of goods</label>
        <input type="text" asp-for="Type_of_Goods" class="form-control" placeholder="enter type of goods" required />
    </div>
    <div class="form-group">
        <label>Goods Quantity</label>
        <input type="text" asp-for="Goods_Qty" class="form-control" placeholder="enter good quantity" required />
    </div>
    <div class="form-group">
        <label>Transaction Amount</label>
        <input type="text" asp-for="Trans_amount" class="form-control" placeholder="enter transaction amount" required />
    </div>
    <div class="form-group">
        <label>Sending Date</label>
        <input type="text" asp-for="Sending_date" class="form-control" placeholder="enter sending date" required />
    </div>
    <div class="form-group">
        <label>Receiving Date</label>
        <input type="text" asp-for="Receiving_date" class="form-control" placeholder="enter receiving date" required />
    </div>
    <div class="form-group">
        <label>Source Address</label>
        <input type="text" asp-for="Source " class="form-control" placeholder="enter source" required />
    </div>
    <div class="form-group">
        <label>Destination Address</label>
        <input type="text" asp-for="Destination" class="form-control" placeholder="enter destination" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Update" class="btn btn-outline-secondary" />
    <input type="button" value="Delete" class="btn btn-outline-secondary" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
<div class="alert alert-success">
    @ViewBag.message
</div> }
            else if (ViewBag.status == "Error")
            {
<div class="alert alert-danger">
    @ViewBag.message
</div>}
</form>