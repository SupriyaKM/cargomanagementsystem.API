@model IEnumerable<cargomanagementsystem.Entity.Model.Transaction>

<div class="row">
    <div class="col-12">
        <h3>Movies</h3>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Bill No</th>
                    <th>Customer Id</th>
                    <th>Type Of Goods</th>
                    <th>Goods Quantity</th>
                    <th>Transaction Amount</th>
                    <th>Seding Date</th>
                    <th>Receiving Date</th>
                    <th>Source</th>
                    <th>Destination</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model)
                {

    <tr>
        <td>@transaction.Bill_no</td>
        <td>@transaction.customerid</td>
        <td>@transaction.Type_of_Goods</td>
        <td>@transaction.Goods_Qty</td>
        <td>@transaction.Trans_amount</td>
        <td>@transaction.Sending_date</td>
        <td>@transaction.Receiving_date</td>
        <td>@transaction.Source</td>
        <td>@transaction.Destination</td>
        <td><a asp-controller="Movies" asp-action="EditMovie" asp-route-MovieId="@transaction.Bill_no">Edit</a></td>
        <td><a asp-controller="Movies" asp-action="DeleteMovie" asp-route-MovieId="@transaction.Bill_no">Delete</a></td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>
